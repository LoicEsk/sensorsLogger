{% extends 'base.html.twig' %}

{% block title %}Sensor{% endblock %}

{% block content %}
    <h1>Sensor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sensor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sensor.name }}</td>
            </tr>
            <tr>
                <th>KeyCode</th>
                <td>{{ sensor.keyCode }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ sensor.unit }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ sensor.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sensor_index') }}">back to list</a>

    <a href="{{ path('sensor_edit', {'id': sensor.id}) }}">edit</a>

    {{ include('sensor/_delete_form.html.twig') }}
{% endblock %}
